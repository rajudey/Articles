<% if @article.errors.any? %>
    <h2>The following errors prevented from article creation</h2>
   <ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-xs-12">
      <%= form_for(@article, :html => {class: 'form-horizontal', role: "form" })  do |f| %>
      
        <div class="form-group">
          <div class="control-label col-sm-2"> 
            <%= f.label :title %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :title, class: 'form-control', placeholder: 'Title of Article', autofocus: true %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label col-sm-2"> 
            <%= f.label :description %>
          </div>             
          <div class="col-sm-10">
            <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: 'Description of Article' %>
          </div>  
        </div>
        
        <div class="form-group">
          <div class="control-label col-sm-2">         
            <%= f.label :price %>
          </div>  
          <div class="col-sm-10">
            <%= f.number_field :price, class: 'form-control', placeholder: 'Price of Article' %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label col-sm-2">   
            <%= f.label :qty %>
          </div>  
          <div class="col-sm-10">          
            <%= f.number_field :qty, class: 'form-control', placeholder: 'Qty for Article' %>
          </div>   
        </div>
        
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <p><%= f.submit class: "btn btn-primary btn-lg" %></p>
          </div>
        </div>
      <% end %>
      
      <div class="col-sm-offset-2 col-sm-10">
        [ <%= link_to "Cancel request and return to article listing", articles_path %> ]
      </div>
  </div>
</div>
