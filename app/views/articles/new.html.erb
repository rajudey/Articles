<h1>Create an article</h1>
<%= form_for @article do |f| %>
  <div>
  <p>
    <%= f.label :title %><%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><%= f.text_area :description %>
  </p>  
  <p>
    <%= f.label :price %><%= f.number_field :price %>
  </p>  
  <p>
    <%= f.label :qty %><%= f.number_field :qty %>
  </p>   
  <p><%= f.submit %></p>
  </div>
<% end %>